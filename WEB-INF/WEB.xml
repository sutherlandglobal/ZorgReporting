<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

<!-- enable basic auth on this web app-->
<security-constraint>
    <web-resource-collection>
        <web-resource-name>Wildcard means whole app requires authentication</web-resource-name>
        <url-pattern>/*</url-pattern>
        <http-method>GET</http-method>
        <http-method>POST</http-method>
    </web-resource-collection>
    <auth-constraint>
        <role-name>tomcat</role-name>
    </auth-constraint>

</security-constraint>
<login-config>
     <auth-method>BASIC</auth-method>
</login-config>

<security-role>
    <role-name>tomcat</role-name>
</security-role>


	<listener>
		<listener-class>zorg.logging.Log4JCloser</listener-class>
	</listener>

    <!-- General description of your web application -->

    <display-name>Helios - Zorg</display-name>
    <description>
     Zorg Helios site. Written by Jason Diamond
      (jason.diamond@sutherlandglobal.com).
    </description>


    <!-- Context initialization parameters that define shared
         String constants used within your application, which
         can be customized by the system administrator who is
         installing your application.  The values actually
         assigned to these parameters can be retrieved in a
         servlet or JSP page by calling:

             String value =
               getServletContext().getInitParameter("name");

         where "name" matches the <param-name> element of
         one of these initialization parameters.

         You can define any number of context initialization
         parameters, including zero.
    -->

    <context-param>
      <param-name>Jason Diamond</param-name>
      <param-value>jason.diamond@sutherlandglobal.com</param-value>
      <description>
        The EMAIL address of the administrator to whom questions
        and comments about this application should be addressed.
      </description>
    </context-param>

<!-- servlets -->

    <servlet>
        <servlet-name>reportInfo</servlet-name>
        <servlet-class>zorg.api.GetReportInfo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>reportInfo</servlet-name>
        <url-pattern>/reportInfo</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>teamNames</servlet-name>
        <servlet-class>zorg.api.GetTeamNames</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>teamNames</servlet-name>
        <url-pattern>/teamNames</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>agentNames</servlet-name>
        <servlet-class>zorg.api.GetAgentNames</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>agentNames</servlet-name>
        <url-pattern>/agentNames</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>reportTypes</servlet-name>
        <servlet-class>zorg.api.GetReportTypes</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>reportTypes</servlet-name>
        <url-pattern>/reportTypes</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>reportParameters</servlet-name>
        <servlet-class>zorg.api.GetParameters</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>reportParameters</servlet-name>
        <url-pattern>/reportParameters</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>supportedFrontEnds</servlet-name>
        <servlet-class>zorg.api.GetSupportedFrontEnds</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>supportedFrontEnds</servlet-name>
        <url-pattern>/supportedFrontEnds</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>reporting</servlet-name>
        <servlet-class>zorg.api.Reporting</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>reporting</servlet-name>
        <url-pattern>/reporting</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>siteMetrics</servlet-name>
        <servlet-class>zorg.api.GetSiteMetrics</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>siteMetrics</servlet-name>
        <url-pattern>/siteMetrics</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>userGrains</servlet-name>
        <servlet-class>zorg.api.GetUserGrains</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userGrains</servlet-name>
        <url-pattern>/userGrains</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>timeGrains</servlet-name>
        <servlet-class>zorg.api.GetTimeGrains</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>timeGrains</servlet-name>
        <url-pattern>/timeGrains</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>parameters</servlet-name>
        <servlet-class>zorg.api.GetParameters</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>parameters</servlet-name>
        <url-pattern>/parameters</url-pattern>
    </servlet-mapping>

<!-- -->
    <session-config>
      <session-timeout>30</session-timeout>    <!-- 30 minutes -->
    </session-config>


</web-app>
